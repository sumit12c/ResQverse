  <div class="animation" style="--li:23; --S:6">
    <button class="btn" type="submit">Register</button>
  </div>
    <!-- Explicit Google Sign-Up Button -->
    <div class="animation" style="--li:23; --S:6; margin-top:10px;">
        <button type="button" id="googleSignUpBtn" class="google-oauth-btn">
            <span class="g-icon-wrapper">
                <svg width="18" height="18" viewBox="0 0 24 24" aria-hidden="true"><path fill="#EA4335" d="M12 11.988h11.52c.096.552.144 1.2.144 1.8 0 6.168-4.128 10.56-11.664 10.56A12 12 0 0 1 0 12 12 12 0 0 1 12 0c3.24 0 5.952 1.104 8.064 3.168l-3.456 3.312C15.408 5.04 13.824 4.44 12 4.44c-4.176 0-7.488 3.504-7.488 7.56 0 4.128 3.312 7.56 7.488 7.56 3.6 0 5.904-1.92 6.384-4.56H12v-2.952Z"/></svg>
